{
  "name": "saas-islam",
  "version": "1.0.0",
  "private": true,
  "description": "Plateforme islamique SaaS — Coran, Hadiths, Prière, Bibliothèque",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "import:quran": "tsx database/seeds/01-import-quran.ts",
    "import:quran:dry": "DRY_RUN=true tsx database/seeds/01-import-quran.ts",
    "seed:quran": "tsx database/seeds/01_seed_quran.ts",
    "seed:hadiths": "tsx database/seeds/02_seed_hadiths.ts",
    "seed:all": "tsx database/seeds/run_all.ts",
    "seed:verify": "tsx database/seeds/verify_integrity.ts",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:reset": "echo 'INTERDIT en production — voir docs/CONVENTIONS.md' && exit 1",
    "import:hadiths": "tsx database/seeds/02-import-hadiths.ts",
    "import:hadiths:dry": "DRY_RUN=true tsx database/seeds/02-import-hadiths.ts",
    "test:integrity": "jest tests/integrity/ --bail --verbose",
    "test:integrity:watch": "jest tests/integrity/ --bail --verbose --watch",
    "test:ci": "jest tests/integrity/ --bail --verbose --forceExit --ci"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "dotenv": "^16.6.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.33",
    "jest": "^30.2.0",
    "prisma": "^5.22.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
