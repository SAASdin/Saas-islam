# PostgreSQL (même DB que le mono-repo)
DATABASE_URL=postgresql://islampc@localhost:5432/saas_islam

# YouTube Data API v3
YOUTUBE_API_KEY=YOUR_YOUTUBE_API_KEY

# OpenAI — Whisper + GPT-4 (fallback traduction)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# DeepL API (traduction prioritaire)
DEEPL_API_KEY=YOUR_DEEPL_API_KEY

# Anthropic Claude (fallback secondaire traduction)
