{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "."
  },
  "include": [
    "database/**/*.ts",
    "prisma/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "apps"
  ]
}
